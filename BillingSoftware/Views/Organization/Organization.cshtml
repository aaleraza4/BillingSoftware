@model IList<Billing.DTOs.DTOs.OrganizationDTO>;
@{
    Layout = "~/Views/Shared/_layout.cshtml";
}
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">
        <!-- Begin Page Content -->
        <div class="container-fluid">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Customer Listing</h6>
                </div>
                <div class="card-header py-3">
                    <a data-ajax="true"
                       data-ajax-method="get"
                       data-ajax-mode="replace"
                       data-ajax-success="addUpdateOrganizationSuccess"
                       data-ajax-url="@Url.Action("AddUpdateOrganizationForm", "Organization")">
                        <input type='button' value='Add Customer/Organization' class="btn btn-primary" />
                    </a>
                </div>
                <div class="card-body grid-div">
                    <partial name="_OrganizationGrid" />
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->
</div>

<div class="modal fade" id="OrganizationModal" tabindex="-1" role="dialog" aria-labelledby="OrganizationModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content organization-modal-body">

        </div>
    </div>
</div>

<script src="~/ControllerJs/Organization.js" asp-append-version="true"></script>
