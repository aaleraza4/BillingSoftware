@model Billing.DTOs.DTOs.OrganizationDTO;

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<form data-ajax="true"
      data-ajax-method="post"
      data-ajax-success="addUpdatePostSuccess"
      data-ajax-url="@Url.Action("AddUpdateOrganizationForm", "Organization")">
    <div class="modal-header">
        <h5 class="modal-title" id="OrganizationModal">Add Customer/Organization</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <input type="hidden" asp-for="Id" />
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name">Name</label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="OrganizationType" class="control-label"></label>
                <select asp-for="OrganizationType" class="form-control">
                    <option value="1">Organization</option>
                    <option value="2">Customer</option>
                </select>
                <span asp-validation-for="OrganizationType" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
</form>



