@model IList<Billing.DTOs.DTOs.QuotationDTO>;
@{

    var _inc = 1;
}
<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th width="5%" class="text-center">Serial No.</th>
                <th>QuotationNo</th>
                <th>CarNo</th>
                <th>LaborAmount</th>
                <th>Quantity</th>
                <th>Rate</th>
                <th>RepairAmount</th>
                <th>Status</th>
                <th>TotalAmount</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="5%" class="text-center">@_inc</td>
                        <td>@item?.QuotationNo</td>
                        <td>@item?.CarNo</td>
                        <td>@item?.LaborAmount</td>
                        <td>@item?.Quantity</td>
                        <td>@item?.Rate</td>
                        <td>@item?.RepairAmount</td>
                        <td>@item?.Status</td>
                        <td>@item?.TotalAmount</td>
                        <td>
                            <a href='@Url.Action("EditQuotation", "Quotation",new { id=item?.Id})'>
                                <span>Edit</span>
                            </a>
                        </td>
                        <td>
                            <a href='@Url.Action("DeleteQuotation", "Quotation",new { id=item?.Id})'>
                                <span>Delete</span>
                            </a>
                        </td>
                    </tr>
                    _inc = _inc + 1;
                }
            }

        </tbody>
    </table>
</div>