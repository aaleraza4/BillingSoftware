@model IList<Billing.DTOs.DTOs.SparePartDTO>;
@{

    var _inc = 1;
}
<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th width="5%" class="text-center">Serial No.</th>
                <th>Item Name</th>
                <th>Item Rate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="5%" class="text-center">@_inc</td>
                        <td>@item?.Name</td>
                        <td>@item?.Price</td>

                        <td>
                            <a data-ajax="true"
                               data-ajax-method="get"
                               data-ajax-mode="replace"
                               data-ajax-success="addUpdateSparePartSuccess"
                               data-ajax-url="@Url.Action("EditSparePart", "SparePart",new { Id=item?.Id})">Edit</a>
                        </td>
                        <td>
                            <a href="javascript:void(0)"onclick="Billing_SparePart.DeleteSparePart('/SparePart/DeleteSparePart', '@item.Id')">
                                <span>Delete</span>
                                
                            </a>

                        </td>
                    </tr>
                    _inc = _inc + 1;
                }
            }

        </tbody>
    </table>
</div>